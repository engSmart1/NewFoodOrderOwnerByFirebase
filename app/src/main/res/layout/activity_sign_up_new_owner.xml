<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/member"
    tools:context="musictag.hytham1.com.newfoodorder.SignUpNewOwner">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new owner Email"
        android:padding="9dp"
        android:textColor="#000"
        android:background="#ed8524"
        android:id="@+id/et_signUpOwner"
        android:inputType="textEmailAddress"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password..More 5 Characters"
        android:layout_marginTop="8dp"
        android:padding="9dp"
        android:background="#ed8524"
        android:textColor="#000"
        android:id="@+id/et_signUpPass"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:text="Submit"
        android:textStyle="bold"
        android:background="@drawable/a"
        android:onClick="submitNewOwner"/>
</LinearLayout>
